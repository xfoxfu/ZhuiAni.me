{
  "name": "zhui-anime-webui",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "serve": "vite preview",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:prettier": "prettier --ignore-unknown --check 'src/**/*'",
    "lint:tsc": "tsc --noEmit --pretty",
    "lint": "concurrently 'pnpm:lint:*' --group",
    "format": "prettier --ignore-unknown --write 'src/**/*'",
    "build-api": "swagger-typescript-api -p http://localhost:5000/api/swagger/v1/swagger.json -t build/api-template -o src -n api.ts && prettier --write src/api.ts"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.1",
    "@chakra-ui/styled-system": "^2.9.1",
    "@chakra-ui/system": "^2.6.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@marsidev/react-turnstile": "^0.3.1",
    "escape-string-regexp": "^5.0.0",
    "framer-motion": "^10.16.4",
    "jotai": "^2.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.1",
    "react-icons": "^4.11.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.15.0",
    "swr": "^2.2.2",
    "usehooks-ts": "^2.9.1",
    "whatwg-mimetype": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/whatwg-mimetype": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "swagger-typescript-api": "^13.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  },
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrderSortSpecifiers": true
  }
}
